%table.table.table-striped
  %thead
    %tr 
      %th Quantity
      %th Product
      %th Price
  -@cart.items.each do |item|
    %tr
      %td=item.quantity
      %td
        =image_tag item.product.image.thumb
        =link_to item.product.name, item.product
      %td=item.total_price

%p=number_to_currency @cart.total_price, unit: 'THB '

%p=link_to 'check out' , checkout_cart_path , class: 'btn btn-primary'